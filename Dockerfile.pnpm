FROM node:18-alpine

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Install dependencies first (including dev dependencies for build)
COPY package*.json ./
RUN pnpm install

# Generate Prisma Client
COPY prisma ./prisma/
RUN npx prisma generate

# Copy source code
COPY . .

# Build TypeScript
RUN pnpm build

# Clean dev dependencies
RUN pnpm prune --prod

# Expose port
EXPOSE 3000

# Start the application
CMD ["pnpm", "start"]
